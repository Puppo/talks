{
  "name": "talks",
  "version": "1.0.0",
  "description": "Public Tech Talks",
  "homepage": "https://github.com/Puppo/talks",
  "repository": "https://github.com/Puppo/talks",
  "bugs": {
    "url": "https://github.com/Puppo/talks/issues"
  },
  "author": "Puppo <luca@delpuppo.net>",
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "freya development",
    "build": "freya build",
    "postbuild": "concurrently npm:lint npm:lint:css npm:typecheck",
    "server": "freya server",
    "pdf": "freya pdf",
    "format": "prettier -w src",
    "lint": "eslint --cache",
    "lint:css": "stylelint --cache src/**/*.css",
    "typecheck": "tsc -p . --noEmit",
    "deploy": "freya deploy",
    "postdeploy": "cd dist/deploy && netlify deploy --site $NETLIFY_SITE_ID --dir site --prod",
    "verify": "node --import tsx src/scripts/verify.ts",
    "list": "find src/talks -type d -depth 1 -exec basename {} \\; | sort",
    "convert-images": "node --import tsx src/scripts/convert-images.ts",
    "optimize-images": "fd -e .webp -x cwebp {} -o {} -short",
    "fix-downloads-visibility": "nodemon -e jpg,png,webp --exec chflags nohidden .",
    "generate-cfp": "node --import tsx src/scripts/generate-cfp.ts"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.0.1",
    "@fortawesome/free-brands-svg-icons": "^7.0.1",
    "@fortawesome/free-regular-svg-icons": "^7.0.1",
    "@fortawesome/free-solid-svg-icons": "^7.0.1",
    "@perseveranza-pets/freya": "^0.74.2"
  },
  "devDependencies": {
    "@cowtech/eslint-config": "^10.4.0",
    "@cowtech/stylelint-config": "^1.0.1",
    "@types/node": "^24.5.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "sharp": "^0.34.4",
    "stylelint": "^16.24.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
